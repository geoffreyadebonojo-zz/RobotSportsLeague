<h1>Player Roster</h1>

<%= link_to "Auto Select", edit_roster_path({cmd: "auto_generate"}) %>

<table>
  <tr>
    <td><%= link_to "Name", roster_path(sort: "name") %></td>
    <td><%= link_to "Player ID", roster_path(sort: "player_id") %></td>
    <td><%= link_to "Speed", roster_path(sort: "speed") %></td>
    <td><%= link_to "Strength", roster_path(sort: "strength") %></td>
    <td><%= link_to "Agility", roster_path(sort: "agility") %></td>
    <td><%= link_to "Stats Total", roster_path(sort: "stats_total") %></td>
    <td>Status</td>
  </tr>
<% @roster.each do |player| %>
  <tr>
    <td><%= player.name %></td>
    <td><%= player.player_id %></td>
    <td><%= player.speed %></td>
    <td><%= player.strength %></td>
    <td><%= player.agility %></td>
    <td><%= player.stats_total %></td>
    <td><%= player.status %></td>

    <td>
      <% if player.status != "starter" %>
        <%= link_to "Starter", players_path({player_id: player.player_id, status: 'starter'})%>
      <% end %>
    </td>

    <td>
      <% if player.status != "alternate" %>
        <%= link_to "Alternate", players_path({player_id: player.player_id, status: 'alternate'}) %>
      <% end %>
    </td>

  </tr>
<% end %>
</table>
